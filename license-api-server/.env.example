# Environment Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rockpoint_licenses
# For cloud deployment use: mongodb+srv://username:password@cluster.mongodb.net/rockpoint_licenses

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# License Encryption Key (Generate a strong key for production)
LICENSE_SECRET=your-license-encryption-key-change-in-production

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=rockpoint-releases

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@rockpoint.com

# Admin Configuration
ADMIN_EMAIL=admin@rockpoint.com
ADMIN_PASSWORD=admin123456

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=100000000

# Security
CORS_ORIGIN=http://localhost:3000
