# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your-chain-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rockpoint_chain
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 1C Integration Configuration
1C_API_URL=http://your-1c-server/api/v1
1C_USERNAME=rockpoint_user
1C_PASSWORD=your-1c-password
1C_SYNC_INTERVAL=300000
1C_TIMEOUT=30000

# WebSocket Configuration
WS_PATH=/ws
WS_PORT=3002

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5174,http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/chain-core.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Settings
ADMIN_EMAIL=admin@rockpoint.com
LOW_STOCK_EMAIL_THRESHOLD=5
SYNC_ERROR_EMAIL=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups
