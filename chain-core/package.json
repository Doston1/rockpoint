{
  "name": "chain-core",
  "version": "1.0.0",
  "description": "Main office server for RockPoint chain management - Node.js + TypeScript + Express + WebSocket + PostgreSQL + 1C API Integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "dev:tsx": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:1c": "node scripts/test-1c-api.js",
    "test:1c:info": "node scripts/test-1c-api.js --info",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:auth": "jest tests/onec-api/auth.test.ts",
    "test:branches": "jest tests/onec-api/branches.test.ts",
    "test:products": "jest tests/onec-api/products.test.ts",
    "test:employees": "jest tests/onec-api/employees.test.ts",
    "test:categories": "jest tests/onec-api/categories.test.ts",
    "test:sync": "jest tests/onec-api/sync-logs.test.ts",
    "test:integration": "jest tests/onec-api/integration.test.ts",
    "test:branch-api": "jest tests/branches-api/",
    "test:branch-auth": "jest tests/branches-api/auth.test.ts",
    "test:branch-transactions": "jest tests/branches-api/transactions.test.ts",
    "test:branch-employees": "jest tests/branches-api/employees.test.ts",
    "test:branch-products": "jest tests/branches-api/products.test.ts",
    "test:branch-inventory": "jest tests/branches-api/inventory.test.ts",
    "test:branch-sync": "jest tests/branches-api/sync.test.ts",
    "test:branch-integration": "jest tests/branches-api/integration.test.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "tsx src/database/reset.ts"
  },
  "keywords": [
    "pos",
    "retail",
    "chain-management",
    "main-office",
    "1c-integration",
    "typescript",
    "express",
    "websocket",
    "postgresql"
  ],
  "author": "RockPoint Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "sharp": "^0.34.3",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  }
}
