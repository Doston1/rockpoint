# Environment Configuration for Branch Core Server

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/rockpoint_branch
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rockpoint_branch
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Branch Configuration
BRANCH_ID=branch-001
BRANCH_NAME=Main Store
BRANCH_TYPE=supermarket
BRANCH_TIMEZONE=UTC

# Cloud Sync Configuration
CLOUD_API_URL=https://api.rockpoint-cloud.com
CLOUD_API_KEY=your-cloud-api-key
SYNC_INTERVAL=24h
SYNC_ENABLED=true

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# POS Terminal Configuration
MAX_TERMINALS=10
TERMINAL_TIMEOUT=300000

# Business Hours (24h format)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=22:00

# Default Admin User (for initial setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PIN=1234
DEFAULT_ADMIN_EMAIL=admin@branch.local

# =================================================================
# UZUM BANK FASTPAY CONFIGURATION
# =================================================================

# Uzum Bank API Credentials (REQUIRED for FastPay functionality)
# Get these from your Uzum Bank manager after onboarding
UZUM_MERCHANT_SERVICE_USER_ID=your-cash-register-id
UZUM_SECRET_KEY=your-secret-key-from-uzum-bank
UZUM_SERVICE_ID=your-service-id

# Uzum Bank API Configuration (OPTIONAL - defaults provided)
UZUM_API_BASE_URL=https://mobile.apelsin.uz
UZUM_REQUEST_TIMEOUT_MS=15000
UZUM_CASHBOX_CODE_PREFIX=RockPoint
UZUM_MAX_RETRY_ATTEMPTS=3
UZUM_ENABLE_LOGGING=true

# FastPay Integration Settings
# Enable/disable FastPay payment method in POS
FASTPAY_ENABLED=true
# Minimum and maximum payment amounts in UZS
FASTPAY_MIN_AMOUNT=1000
FASTPAY_MAX_AMOUNT=10000000
